<% layout("layouts/boilerplate") %>
<h1 class="text-center">Find Gyms</h1>
<% if(gyms.length === 0){ %>
<h5>No Gyms Currently</h5>
<% } %> <% for(let gym of gyms){ %>
<div class="card mt-4 mb-4">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="<%=gym.image%>" class="card-img-top" alt="Gym Photo" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=gym.title %></h5>
        <p class="card-text"><%= gym.description %></p>
        <p class="card-text"><%= gym.location %></p>

        <p class="card-text d-flex justify-content-between">
          <small class="text-muted"
            >Created by <%= gym.author.username %>
          </small>
          <a href="http://localhost:3000/gyms/<%=gym._id%>" class="card-link"
            >More Info</a
          >
        </p>
      </div>
    </div>
  </div>
</div>
<% } %>
